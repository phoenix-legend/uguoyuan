<h1>创建员工</h1>
<div class="row">
  <div class="large-6 columns">
    <%= form_tag('/cms/employees', method: :post) do %>
        <div class="row">
          <div class="large-3 columns">
            <label class="text-right inline">邮件<span class="required">*</span></label>
          </div>
          <div class="large-9 columns">
            <input id="employee_email" name="employee[email]" type="text" value>

          </div>
        </div>
        <div class="row">
          <div class="large-3 columns">
            <label class="text-right inline">姓名<span class="required">*</span></label>
          </div>
          <div class="large-9 columns">
            <input id="employee_real_name" name="employee[real_name]" type="text" value>

          </div>
        </div>
        <div class="row">
          <div class="large-3 columns">
            <label class="text-right inline">工号</label>
          </div>
          <div class="large-9 columns">
            <input id="employee_work_number" name="employee[work_number]" type="text" value>

          </div>
        </div>

        <div class="row">
          <div class="large-3 columns">
            <label class="text-right inline">出生年月</label>
          </div>
          <div class="large-9 columns">
            <%= date_field_tag 'employee[birthday]',  Date.new(2007, 1, 1) %>
          </div>
        </div>
        <div class="row">
          <div class="large-3 columns">
            <label class="text-right inline">参加工作时间</label>
          </div>
          <div class="large-9 columns">
            <%= date_field_tag 'employee[first_work_date]',  Date.new(2007, 1, 1) %>
          </div>
        </div>
        <div class="row">
          <div class="large-3 columns">
            <label class="text-right inline">职位</label>
          </div>
          <div class="large-9 columns">
            <ol>
              <% @organizations.each do |organization| %>
                  <li>
                    <%= check_box_tag 'employee[organization_ids][]', organization.id ,@employee.organization_ids.include?(organization.id)  %>
                    <%= organization.name %>
                  </li>
              <% end %>
            </ol>
          </div>
        </div>

        <div class="row">
          <div class="large-3 columns">
            <label class="text-right inline">入职时间</label>
          </div>
          <div class="large-9 columns">
            <%= date_field_tag 'employee[entry_date]',  Date.new(2007, 1, 1) %>
          </div>
        </div>

        <input class="button" name="commit" type="submit" value="确认">
    <% end %>
  </div>
</div>